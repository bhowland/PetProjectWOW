<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>


        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/All_Pet_info
        </property>
        <property name="hibernate.connection.username">
            root
        </property>
        <property name="hibernate.connection.password">
            Hard2bhot
        </property>

        <!-- List of XML mapping files -->
        <mapping resource="PetsGeneral.hbm.xml"/>
        <mapping class="petInfo.PetsGeneral"/>

        <!--<mapping resource="StatsForPets.hbm.xml"/>-->
        <!--<mapping class="petInfo.StatsForPets"/>-->

        <mapping resource="OverallPets.hbm.xml"/>
        <mapping class="petInfo.OverallPets"/>

        <mapping resource="User.hbm.xml.xsl"/>
        <mapping class="login.User"/>

    </session-factory>
</hibernate-configuration>